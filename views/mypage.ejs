//<---nickname 변경--->
  function changeclick_id() {
    const newNickname = document.getElementById("change_nickname").value;
  
  // 닉네임 변경 요청 보내기
  fetch("/nickname", {
    method: "POST",
    headers: {
      "Content-Type": "application/json"
    },
    body: JSON.stringify({ change_nickname: newNickname })
  })
  .then(response => {
    if (response.ok) {
      // 비밀번호 변경 성공 처리
      console.log("Nickname changed successfully");
    } else {
      // 비밀번호 변경 실패 처리
      console.error("Failed to change Nickname");
    }
  })
  .catch(error => {
    console.error("Error occurred:", error);
  });

  closeClick_id();
  }

