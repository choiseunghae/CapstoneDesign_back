  closeModal_pw();
}

// 모달창에서 '확인' 버튼 클릭 시 실행되는 함수
function confirmClick_pw() {
  // 비밀번호 변경 요청 함수 호출
  changePassword();
}

// 모달창에서 '확인' 버튼에 클릭 이벤트 리스너 등록
document.getElementById('confirm').addEventListener('click', confirmClick_pw);

